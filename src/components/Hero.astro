---
import description from "../assets/landing/Landing Descripcion.png";
import home from "../assets/landing/Landing Home.png";
import participa from "../assets/landing/Landing Participa.png";
import products from "../assets/landing/Landing Products.png";
import mobileEmpaque from "../assets/landing/mobile/Mobile Landing empaque.png";
import mobileBowl from "../assets/landing/mobile/Mobile Landing bowl.png";
import WhatsappParticipa from "./WhatsappParticipa.astro";
---

<header
	class="container mx-auto px-4 flex flex-col md:flex-row min-h-125 my-15"
>
	<!-- Left Side: Home, Participa, Description -->
	<div
		class="shrink-0 w-full md:w-auto p-4 md:p-8 flex flex-col items-center justify-center gap-6 mb-8 md:mb-20"
	>
		<img
			src={home.src}
			alt="Home"
			class="w-full max-w-64 xl:max-w-72 2xl:max-w-md h-auto object-contain"
		/>
		<img
			src={participa.src}
			alt="Participa"
			class="w-full max-w-64 xl:max-w-72 2xl:max-w-md h-auto object-contain"
		/>
		<img
			src={description.src}
			alt="DescripciÃ³n"
			class="w-full max-w-64 xl:max-w-72 2xl:max-w-md h-auto object-contain"
		/>
		<div class="hidden md:block">
			<WhatsappParticipa />
		</div>
	</div>

	<!-- Right Side: Products (Grows) -->
	<div
		class="w-full grow p-4 lg:p-8 flex flex-col items-center justify-center"
	>
		<!-- Desktop Image -->
		<img
			src={products.src}
			alt="Products Hero"
			class="hidden md:block w-full h-auto object-contain max-h-150"
		/>

		<!-- Mobile Layout -->
		<div class="md:hidden flex flex-col items-center w-full">
			<img
				src={mobileEmpaque.src}
				alt="Empaque"
				class="w-auto h-auto max-w-xs object-contain z-10"
			/>
			<img
				src={mobileBowl.src}
				alt="Bowl"
				class="w-auto h-auto max-w-xs object-contain -mt-12 z-20 relative"
			/>
		</div>
	</div>
	
</header>
