---
import howTo1 from "../assets/howto/HowTo 1.png";
import products from "../assets/howto/HowTo Products.png";
import howTo2 from "../assets/howto/HowTo 2.png";
import phone from "../assets/howto/HowTo Phone.png";
import howTo3 from "../assets/howto/HowTo 3.png";
import premios from "../assets/howto/HowTo Premios.png";

import hero from "../assets/howto/HowTo Hero.png";
import logos from "../assets/howto/HowTo Logos.png";
---

<section class="relative py-16 z-10 w-full">
	<!-- Background with top offset and bottom overflow -->
	<div
		class="absolute inset-x-0 top-40 md:top-52.5 -bottom-37.5 bg-white -z-10"
	>
	</div>

	<div class="container mx-auto px-4">
		<!-- First space: two blocks justify between -->
		<div class="flex justify-between gap-4 mb-12">
			<div>
				<img
					src={hero.src}
					alt="How To Hero"
					class="w-full h-auto object-contain"
				/>
			</div>
			<div>
				<img
					src={logos.src}
					alt="How To Logos"
					class="w-full h-auto object-contain"
				/>
			</div>
		</div>

		<!-- 3 Cols Flex -->
		<div
			class="flex flex-col md:flex-row gap-6 justify-between md:items-end"
		>
			<!-- Col 1 -->
			<div class="flex-1 flex flex-col items-center gap-4">
				<div class="h-64 md:h-96 w-full flex items-end justify-center">
					<img
						src={products.src}
						alt="Products"
						class="max-h-full max-w-full object-contain"
					/>
				</div>
				<img
					src={howTo1.src}
					alt="How to step 1"
					class="w-1/2 md:w-full h-auto object-contain"
				/>
			</div>

			<!-- Col 2 -->
			<div class="flex-1 flex flex-col items-center gap-4">
				<div class="h-64 md:h-96 w-full flex items-end justify-center">
					<img
						src={phone.src}
						alt="Phone"
						class="max-h-full max-w-full object-contain"
					/>
				</div>
				<img
					src={howTo2.src}
					alt="How to step 2"
					class="w-1/2 md:w-full h-auto object-contain"
				/>
			</div>

			<!-- Col 3 -->
			<div class="flex-1 flex flex-col items-center gap-4">
				<div class="h-64 md:h-96 w-full flex items-end justify-center">
					<img
						src={premios.src}
						alt="Prizes"
						class="max-h-full max-w-full object-contain"
					/>
				</div>
				<img
					src={howTo3.src}
					alt="How to step 3"
					class="w-1/2 md:w-full h-auto object-contain"
				/>
			</div>
		</div>
	</div>
</section>
