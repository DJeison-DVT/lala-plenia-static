---
import terms from "../assets/footer/Footer Terms.png";
import promo from "../assets/footer/Footer PROMO.png";
import aviso from "../assets/footer/Footer AVISO.png";
import mobileJugadores from "../assets/footer/mobile/Mobile Footer jugadores.png";
import mobilePlenia from "../assets/footer/mobile/Mobile Footer plenia.png";
import mobilePromo from "../assets/footer/mobile/Mobile Footer promo.png";
---

<footer>
	<!-- Terms & Aviso Links (Centered Top) -->
	<div
		class="container mx-auto px-4 py-30 flex flex-col md:flex-row justify-center items-center gap-4 md:gap-0"
	>
		<a
			href="/GOLALAZO TYC.pdf"
			target="_blank"
			rel="noopener noreferrer"
			class="transition-transform hover:scale-105"
		>
			<img
				src={terms.src}
				alt="TÃ©rminos y Condiciones"
				class="h-auto max-w-72 object-contain"
			/>
		</a>
		<a
			href="/GOLALAZO AVISO DE PRIVACIDAD.pdf"
			target="_blank"
			rel="noopener noreferrer"
			class="transition-transform hover:scale-105"
		>
			<img
				src={aviso.src}
				alt="Aviso de Privacidad"
				class="h-auto max-w-72 object-contain"
			/>
		</a>
	</div>

	<!-- Full Width Promo Image (Desktop) -->
	<img
		src={promo.src}
		alt="Legales"
		class="w-full h-auto hidden md:block"
	/>

	<!-- Mobile Version -->
	<div class="md:hidden flex flex-col items-center w-full">
		<!-- Row 1: Plenia Logo (Centered) -->
		<div class="py-4">
			<img
				src={mobilePlenia.src}
				alt="Plenia"
				class="h-auto max-w-xs object-contain"
			/>
		</div>

		<!-- Row 2: Promo (Centered) -->
		<div class="py-4">
			<img
				src={mobilePromo.src}
				alt="Promo"
				class="h-auto max-w-xs object-contain"
			/>
		</div>

		<!-- Row 3: Jugadores (Full Width) -->
		<img
			src={mobileJugadores.src}
			alt="Jugadores"
			class="w-full h-auto block"
		/>
	</div>
</footer>
