---
import terms from "../assets/footer/Footer Terms.png";
---

<footer>
	<!-- Content Layer (Terms + Columns) -->
	<div class="container mx-auto px-4 relative z-0 pb-12">
		<!-- Terms Link (Centered Top) -->
		<div class="flex justify-center mb-8">
			<a href="#" class="transition-transform hover:scale-105">
				<img
					src={terms.src}
					alt="Términos y Condiciones"
					class="h-auto max-w-72 object-contain"
				/>
			</a>
		</div>

		<div class="flex flex-col md:flex-row gap-8 items-start">
			<!-- Left Column (Shrink 0) -->
			<div class="shrink-0 relative">
				<!-- Placeholder for Left Col content -->
				<div
					class="w-64 h-32 bg-gray-900/50 rounded border border-dashed border-gray-500 flex items-center justify-center text-gray-300"
				>
					Left Col (no shrink)
				</div>
			</div>

			<!-- Right Column (Grow) -->
			<div class="grow w-full relative">
				<!-- Placeholder for Right Col content -->
				<div
					class="w-full h-32 bg-gray-800/50 rounded border border-dashed border-gray-500 flex items-center justify-center text-gray-300"
				>
					Right Col (grow)
				</div>
			</div>
		</div>
	</div>

	<!-- Angled White Background Layer (Overlaps content) -->
	<div class="relative w-full z-10 -mt-24 pointer-events-none">
		<div
			class="bg-white w-full pt-32 pb-8 px-4 pointer-events-auto"
			style="clip-path: polygon(0 6rem, 100% 0, 100% 100%, 0 100%);"
		>
			<!-- Legal Text -->
			<div
				class="mt-4 text-[10px] text-gray-400 text-center max-w-5xl mx-auto leading-tight"
			>
				<p>
					Promoción válida únicamente para personas mayores de 18
					años. Consulta bases, términos y condiciones en
					www.golalazodesaborplenia.com
				</p>
			</div>
		</div>
	</div>
</footer>
